<div class="page-header">
  <%= link_to abeyances_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_abeyance_path(@abeyance), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show abeyance</h1>
</div>

<dl class="dl-horizontal">
  <dt>Start time:</dt>
  <dd><%= @abeyance.start_time %></dd>

  <dt>End time:</dt>
  <dd><%= @abeyance.end_time %></dd>

  <dt>Title:</dt>
  <dd><%= @abeyance.title %></dd>

  <dt>Reminder:</dt>
  <dd><%= @abeyance.reminder %></dd>

</dl>
